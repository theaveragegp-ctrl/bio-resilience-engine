# Bio-Resilience Engine - Environment Configuration
# Copy this file to .env and update with your values

# Application
APP_NAME=Bio-Resilience Engine
VERSION=0.4.2
DEBUG=False

# Database
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/bio_resilience

# Redis
REDIS_URL=redis://localhost:6379/0

# MQTT
MQTT_BROKER=mqtt.bio-resilience.org
MQTT_PORT=1883

# Security
SECRET_KEY=change-this-to-a-secure-random-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Fusion Engine
FUSION_UPDATE_RATE_HZ=1.0
FUSION_PREDICTION_HORIZON_SEC=300

# Model Paths
LSTM_MODEL_PATH=models/activity_lstm.pt
FATIGUE_MODEL_PATH=models/fatigue_predictor.pt

# Logging
LOG_LEVEL=INFO
SENTRY_DSN=

# Edge Node (for local testing)
EDGE_DEVICE_ID=jetson_dev_001
EDGE_VIDEO_SOURCE=0
EDGE_CONFIDENCE_THRESHOLD=0.7
